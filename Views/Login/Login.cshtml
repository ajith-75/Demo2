@{
    ViewData["Title"] = "Wedding Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #fff3f3, #fffef0);
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
            text-align: center;
        }

            .login-container h2 {
                color: #800000; /* Maroon/Wedding Cache Color */
                margin-bottom: 30px;
                font-size: 2em;
            }

        input[type="text"] {
            padding: 12px;
            width: 250px;
            border: 1px solid #ccc;
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 16px;
            color: #800000; /* Input text color */
        }

            input[type="text"]::placeholder {
                color: #a52a2a; /* Cache/maroon placeholder */
            }

        button {
            padding: 10px 20px;
            background-color: #28a745; /* Green button */
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: #218838; /* Darker green */
            }

        .error {
            color: red;
            margin-top: 10px;
        }

        .funny-text {
            color: #e67e22;
            font-size: 1.2em;
            margin-top: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>🎉 Welcome to my Wedding! 🎉</h2>

        <p class="funny-text">
            If you get the gift, press the button below! 😄
        </p>

        <form method="post">
            <input type="text" name="name" placeholder="Enter your name" />
            <br />
            <button type="submit">Amukku Dumukku</button>
            <div class="error">@ViewBag.Error</div>
        </form>

        <p class="funny-text">
            *We promise there will be lots of food! but only veg! 🍲
        </p>
    </div>
</body>
</html>
